{
  "manifest_version": 3,
  "name": "Email Grabber",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
